{
  "name": "promise-to-async",
  "version": "0.1.0",
  "main": "dist/index.js",
  "repository": "https://github.com/urish/promise-to-async",
  "author": "Uri Shaked <uri@urishaked.com>",
  "license": "MIT",
  "bin": {
    "async-tool": "dist/cli.js"
  },
  "scripts": {
    "build": "tsc",
    "prepublish": "npm run build",
    "lint": "tslint -p .",
    "test": "npm run lint && jest",
    "test:ci": "npm run lint && jest --coverage && cat ./coverage/lcov.info | coveralls",
    "test:watch": "jest --watch"
  },
  "files": [
    "dist"
  ],
  "dependencies": {
    "typescript": "^2.4.2"
  },
  "devDependencies": {
    "@types/jest": "^22.0.0",
    "coveralls": "^3.0.0",
    "jest": "^22.0.4",
    "ts-jest": "^22.0.0",
    "ts-node": "^4.1.0",
    "tslint": "^5.8.0"
  },
  "jest": {
    "moduleFileExtensions": [
      "ts",
      "js"
    ],
    "transform": {
      "\\.ts$": "ts-jest"
    },
    "testMatch": [
      "**/*.spec.ts"
    ],
    "collectCoverageFrom": [
      "src/**/*.ts",
      "!src/**/*.spec.ts"
    ],
    "mapCoverage": true
  },
  "engines": {
    "node": ">= 6.4.0"
  }
}
